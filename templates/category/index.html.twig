{% extends 'base.html.twig' %}

{% block title %}All categories{% endblock %}


{% block body %}
{# Messages flash #}
    {% for category, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ category }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}
   <h1>Toutes les catégories de séries : </h1>
   {% for category in categories %}
      <div>
       Catégorie : <a href="{{ path('category_show', { 'categoryName': category.name }) }}">{{ category.name }}</a>
      </div>
   {% endfor %}

   <a href="{{ path('app_index') }}">
      Retour à l'accueil
   </a>
{% endblock %}